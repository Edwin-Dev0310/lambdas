{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "InvexCapitalLambdaSendEmailMailboxRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "InvexCapitalLambdaSendEmailMailboxRole",
        "MaxSessionDuration": 3600,
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
          {
            "Ref": "InvexCapitalLambdaSendEmailMailboxPolicy"
          }
        ]
      }
    },
    "InvexCapitalLambdaSendEmailMailboxPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "ManagedPolicyName": "InvexCapitalLambdaSendEmailMailboxPolicy",
        "Description": "Allow Lambda to send emails via SES",
        "Path": "/",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
              ],
              "Resource": "*"
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "serverless-framework-deployments-us-east-1-a6b6d25c-d242",
      "Export": {
        "Name": "sls-mflores-invexcapital-send-support-mailbox-role-prod-ServerlessDeploymentBucketName"
      }
    }
  }
}